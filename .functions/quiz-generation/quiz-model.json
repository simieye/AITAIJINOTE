      "fields": [
        {
          "name": "noteId",
          "type": "text",
          "displayName": "关联笔记ID",
          "required": true,
          "description": "生成该测验题的笔记ID"
        },
        {
          "name": "type",
          "type": "enum",
          "displayName": "题目类型",
          "required": true,
          "enumValues": ["single_choice", "multiple_choice", "true_false", "short_answer"],
          "description": "测验题的类型"
        },
        {
          "name": "question",
          "type": "text",
          "displayName": "题目内容",
          "required": true,
          "description": "测验题的问题内容"
        },
        {
          "name": "options",
          "type": "array",
          "displayName": "选项列表",
          "required": false,
          "description": "选择题的选项列表"
        },
        {
          "name": "correctAnswer",
          "type": "text",
          "displayName": "正确答案",
          "required": true,
          "description": "测验题的标准答案"
        },
        {
          "name": "explanation",
          "type": "text",
          "displayName": "答案解析",
          "required": true,
          "description": "详细的答案解释"
        },
        {
          "name": "difficulty",
          "type": "number",
          "displayName": "难度等级",
          "required": true,
          "description": "题目难度等级（1-5）"
