          "required": true,
          "description": "题目在测验中的显示顺序"
        },
        {
          "name": "createdAt",
          "type": "datetime",
          "displayName": "创建时间",
          "required": true,
          "description": "测验题创建时间"
        },
        {
          "name": "updatedAt",
          "type": "datetime",
          "displayName": "更新时间",
          "required": true,
          "description": "测验题最后更新时间"
        }
      ]
